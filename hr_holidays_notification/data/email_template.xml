<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="0">



         <record id="email_template_leave_for_approve" model="mail.template">
            <field name="name">Leave Request for approval</field>
            <field name="subject">Leave Request for ${object.employee_id.display_name } </field>
           <field name="email_to">${object.employee_id.parent_id.work_email }</field>
           <field name="model_id" ref="hr_holidays_notification.model_hr_holidays"/>
              <field name="lang">${object.employee_id.parent_id.lang}</field>
           <field name="body_html"><![CDATA[
            <div style="padding:0px;width:600px;margin:auto;background: #FFFFFF repeat top /100%;color:#777777">
                <table cellspacing="0" cellpadding="0" style="width:600px;border-collapse:collapse;background:inherit;color:inherit">
                    <tbody><tr>
                        <td valign="center" width="200" style="padding:10px 10px 10px 5px;font-size: 12px">
                            <img src="/logo.png" style="padding: 0px; margin: 0px; height: auto; width: 80px;" alt="${user.company_id.name}">
                        </td>
                    </tr></tbody>
                </table>
            </div>
            <div style="padding:0px;width:600px;margin:auto;background: #FFFFFF repeat top /100%;color:#777777">
            <p>Dear ${object.employee_id.parent_id.display_name},</p>
                <p>
                   You have been assigned to the leave <strong> ${object.display_name}</strong>. Awaiting Approval.
                </p>
                <p>
                    To see the details, click on the following link:
                </p>
                 % set url_detail = '/web#id=%s&view_type=form&model=hr.holidays' % (object.id)

                <div style="text-align: center; margin-top: 16px;">
                     <a href="${url_detail}" style="padding: 5px 10px; font-size: 12px; line-height: 18px; color: #FFFFFF; border-color:#875A7B; text-decoration: none; display: inline-block; margin-bottom: 0px; font-weight: 400; text-align: center; vertical-align: middle; cursor: pointer; white-space: nowrap; background-image: none; background-color: #875A7B; border: 1px solid #875A7B; border-radius:3px">View details</a>
                </div>
                <p>Best regards,</p>
            </div>
            <div style="padding:0px;width:600px;margin:auto; margin-top: 10px; background: #fff repeat top /100%;color:#777777">
               ${user.signature | safe}
                <p style="font-size: 11px; margin-top: 10px;">
                    <strong>Sent by ${user.company_id.name}</strong>
                </p>
            </div>]]></field>
                    <field name="user_signature" eval="False"/>

         </record>


        <record id="email_template_leave_approve" model="mail.template">
              <field name="name">Leave approval</field>
            <field name="subject">Leave Approved - ${object.display_name}</field>
           <field name="email_to">${object.employee_id.work_email }</field>
           <field name="model_id" ref="hr_holidays_notification.model_hr_holidays"/>
            <field name="lang">${user.lang}</field>
           <field name="body_html"><![CDATA[
    <div style="padding:0px;width:600px;margin:auto;background: #FFFFFF repeat top /100%;color:#777777">
        <table cellspacing="0" cellpadding="0" style="width:600px;border-collapse:collapse;background:inherit;color:inherit">
            <tbody><tr>
                <td valign="center" width="200" style="padding:10px 10px 10px 5px;font-size: 12px">
                    <img src="/logo.png" style="padding: 0px; margin: 0px; height: auto; width: 80px;" alt="${user.company_id.name}">
                </td>
            </tr></tbody>
        </table>
    </div>
    <div style="padding:0px;width:600px;margin:auto;background: #FFFFFF repeat top /100%;color:#777777">
    <p>Dear ${object.employee_id.name},</p>
        <p>
           Your leave is <strong>approved</strong>. Hope you will be back soon.
        </p>
        <p>
            To see the details, click on the following link:
        </p>
         % set url_detail = '/web#id=%s&view_type=form&model=hr.holidays' % (object.id)

        <div style="text-align: center; margin-top: 16px;">
             <a href="${url_detail}" style="padding: 5px 10px; font-size: 12px; line-height: 18px; color: #FFFFFF; border-color:#875A7B; text-decoration: none; display: inline-block; margin-bottom: 0px; font-weight: 400; text-align: center; vertical-align: middle; cursor: pointer; white-space: nowrap; background-image: none; background-color: #875A7B; border: 1px solid #875A7B; border-radius:3px">View details</a>
        </div>
        <p>Best regards,</p>
    </div>
    <div style="padding:0px;width:600px;margin:auto; margin-top: 10px; background: #fff repeat top /100%;color:#777777">
       ${user.signature | safe}
        <p style="font-size: 11px; margin-top: 10px;">
            <strong>Sent by ${user.company_id.name}</strong>
        </p>
    </div>]]></field>
            <field name="user_signature" eval="False"/>



         </record>

        <record id="email_template_leave_rejection" model="mail.template">
           <field name="name">leave rejected</field>
            <field name="subject">Leave Rejected - ${object.display_name}</field>
             <field name="email_to">${object.employee_id.work_email }</field>
               <field name="model_id" ref="hr_holidays_notification.model_hr_holidays"/>
             <field name="lang">${user.lang}</field>
             <field name="body_html"><![CDATA[
            <div style="padding:0px;width:600px;margin:auto;background: #FFFFFF repeat top /100%;color:#777777">
                <table cellspacing="0" cellpadding="0" style="width:600px;border-collapse:collapse;background:inherit;color:inherit">
                    <tbody><tr>
                        <td valign="center" width="200" style="padding:10px 10px 10px 5px;font-size: 12px">
                            <img src="/logo.png" style="padding: 0px; margin: 0px; height: auto; width: 80px;" alt="${user.company_id.name}">
                        </td>
                    </tr></tbody>
                </table>
            </div>
            <div style="padding:0px;width:600px;margin:auto;background: #FFFFFF repeat top /100%;color:#777777">
            <p>Dear ${object.employee_id.name},</p>
                <p>
                   Your leave is <strong>rejected</strong>. Thank You.
                </p>
                <p>
                    To see the details, click on the following link:
                </p>
                 % set url_detail = '/web#id=%s&view_type=form&model=hr.holidays' % (object.id)

                <div style="text-align: center; margin-top: 16px;">
                     <a href="${url_detail}" style="padding: 5px 10px; font-size: 12px; line-height: 18px; color: #FFFFFF; border-color:#875A7B; text-decoration: none; display: inline-block; margin-bottom: 0px; font-weight: 400; text-align: center; vertical-align: middle; cursor: pointer; white-space: nowrap; background-image: none; background-color: #875A7B; border: 1px solid #875A7B; border-radius:3px">View details</a>
                </div>
                <p>Best regards,</p>
            </div>
            <div style="padding:0px;width:600px;margin:auto; margin-top: 10px; background: #fff repeat top /100%;color:#777777">
               ${user.signature | safe}
                <p style="font-size: 11px; margin-top: 10px;">
                    <strong>Sent by ${user.company_id.name}</strong>
                </p>
            </div>]]></field>
                    <field name="user_signature" eval="False"/>
             </record>


    </data>
</odoo>

